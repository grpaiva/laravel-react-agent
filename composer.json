{
  "name": "grpaiva/laravel-react-agent",
  "description": "A ReAct style agent for Laravel + Prism with stored chain-of-thought",
  "keywords": [
    "laravel",
    "react",
    "llm",
    "prism"
  ],
  "type": "library",
  "require": {
    "php": "^8.3",
    "laravel/framework": "^11.0",
    "echolabsdev/prism": "^0.23",
    "illuminate/view": "*",
    "illuminate/filesystem": "*",
    "illuminate/events": "*"
  },
  "autoload": {
    "psr-4": {
      "Grpaiva\\LaravelReactAgent\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Grpaiva\\LaravelReactAgent\\Providers\\ReActAgentServiceProvider"
      ]
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Gustavo Paiva",
      "email": "gustavorpaiva@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "pestphp/pest": "^3.7",
    "pestphp/pest-plugin-laravel": "^3.0",
    "orchestra/testbench": "^9.9"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
